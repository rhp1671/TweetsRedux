<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/activity_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.kennardtweets.ui.home.DetailActivity">

    <include layout = "@layout/toolbar_layout"
             android:id="@+id/appBarLayout"/>

    <FrameLayout
        android:id="@+id/framelayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/appBarLayout"
    />
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/framelayoutHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/compose_tweet_margin"
        android:id="@+id/tweet"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tweet"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:id="@+id/imageTweet"/>


</RelativeLayout>
